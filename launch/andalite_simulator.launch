<launch>
    <include file="$(find hdt_description)/launch/upload_andalite.launch"/>

    <include file="$(find hdt_arm_driver)/launch/hdt_arm_driver.launch">
        <arg name="sim" value="true"/>
    </include>

    <node name="robotiq_simulator" pkg="robotiq_controllers" type="robotiq_simulator" output="screen"/>
    <include file="$(find robotiq_controllers)/launch/gripper_command_action.launch">
        <arg name="sim" value="true"/>
    </include>

    <!-- launch nodes that provide /joint_states -->
    <include file="$(find hdt_simulator)/launch/husky_simulator.launch"/>
    <node name="kinect_simulator" pkg="hdt_simulator" type="kinect_simulator" args="--mode=static -31"/>
    <include file="$(find hdt_simulator)/launch/fake_camera_calibration.launch"/>

    <!-- launch robot_state_publisher to translate urdf + /joint_states to /tf -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
</launch>
